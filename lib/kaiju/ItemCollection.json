                  "type":"Hash",
                  "schema":{
                     "layout":{
                        "type":"String",
                        "form_type":"CodifiedList",
                        "default":"oneColumn",
                        "options":[
                           {
                              "display":"One Column",
                              "value":"oneColumn",
                              "type":"String"
                           },
                           {
